@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">@Resources.LogOff</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(Resources.Register, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink(Resources.LogOn, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}


<form class="form-signin" role="form">
    <h2 class="form-signin-heading">@Resources.PleaseSignIn</h2>
    <input type="email" class="form-control" placeholder="@Resources.EmailAddress" required autofocus>
    <input type="password" class="form-control" placeholder="@Resources.Password" required>
    <label class="checkbox">
        <input type="checkbox" value="remember-me"> @Resources.RememberMe
    </label>
    <button class="btn btn-lg btn-primary btn-block" type="submit">@Resources.LogOn</button>
</form>