@{
    ViewBag.Title = "Forgot Password Confirmation";
}

<div class="row">
    <div class="col-md-offset-4 col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><strong>@ViewBag.Title</strong></h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">

                        <div>
                            <p>
                                @BootstrapResources.Resources.PleaseCheckYourEmailToResetPassword
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

